# Django Settings
# Copy this file to .env and fill in your values

# SECRET_KEY - Generate a secure key for production
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# DEBUG - Set to True only in development
DEBUG=True

# ALLOWED_HOSTS - Comma-separated list of hosts
# For development: localhost,127.0.0.1
# For production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (optional - for PostgreSQL in production)
# DB_NAME=recipe_blog
# DB_USER=postgres
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432
